<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% @items.each do |item| %>
        <div class="col">
        
          <div class="card shadow-sm text-center card-size">
            <img class="card-img-top" src="<%= item.img_products %>">
            <h5 class="card-title justify-content-between"><%= item.title %></h5>

            <div class="card-body">
              <p class="card-text"><%= truncate(item.description, length: 100) %></p>
              
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Show product', item_path(item.id) %></button>
                </div>
                <small class="text-muted">Posté par > <%= item.user.email if item.user%> <%= link_to "voir", user_path(item.user) %>      </small>      

              </div>
            </div>
          </div>
        </div>
      <% end %>  
      </div> 