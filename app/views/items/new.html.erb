
<h1>New Item</h1>

<%= form_for @item do |f| %><ul> 

  <li>Titre:</b> <%= f.text_field :title %></li>
  <li>Description:</b> <%= f.text_field  :description %></li>
  <li>Prix</b> <%= f.text_field  :price %></li>
  <li>Periode de disponibilité:</b> <%= f.number_field :available_duration %> </li>
  <li>Début de disponibilité:</b> <%= f.date_field :available_start %></li>
  <li>Fin de disponibilité:</b> <%= f.date_field :available_end %></li>
  <li>Catégorie</b> <%= f.text_field :title_category%></li>

      <%= f.fields_for :images do |s|%>
        <%= s.label :title%>
        <%= s.text_field :title %>  
      <%end%>
  <button type='submit'>Modifier mes infos </button>

<% end %>
