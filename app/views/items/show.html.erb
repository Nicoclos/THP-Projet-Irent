<p id="notice"><%= notice %></p>

<div class="row mb-5">
<h5>Les photos </h5>
    <% @item.images.each do |img|%>
    <p><b></b> <%= img.img_products %></p>
    <%end%>
</div>

<div class="row mb-5">
  <h3 class="">Title:</h3>
  <h2 class=""><%= @item.title %></h2>
</div>

<div class="row mb-5">
  <div class="column">
    <h3 class="">Description:</h3>
    <p class=""><%= @item.description %></p>
  </div>
  <div class="column">
    <h3 class="">Price</h3><br>
    <p class=""><%= @item.price %> €</p><br>
    <h3 class="">Periode de disponibilité:</h3><br>
    <p class=""><%= @item.available_duration %></p><br>
    <h3 class="">Début de disponibilité:</h3><br>
    <p class=""><%= @item.available_start %></p><br>
    <h3 class="">Fin de disponibilité:</h3><br>
    <p class=""><%= @item.available_end %></p>
  </div>
</div>
 
<!------------------------------------------------->



<div class="bottom-buttons">
<%= link_to 'Edit', edit_item_path(@item) %> <%= link_to 'Back', items_path %></div>
<%= link_to 'acheter', order_path(@item) %></div>
<%= link_to 'Supprimer', item_path(@item), class: 'btn btn-danger', data: {method: :delete, confirm: 'Voulez vous vraiment supprimer cet article ?'} %>

</div>
<!------------------------------------------------------------------------------------>
<h1>Page Show Item</h1>

<p>Bienvenue sur la page d'ajout d'un avatar pour le User portant l'id : <%=@item.id%></p>
<h3>Avatar actuel</h3>
<% @item.img_products.each do |i|%>
  <%= image_tag(i)%>
<%end%>
<h3>Changer d'image ?</h3>
<%= form_tag item_img_products_path(@item.id), multipart: true do %>
  <%= file_field_tag :img_products %>
  <%= submit_tag "mettre à jour" %>
<% end %>