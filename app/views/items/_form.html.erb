  <div class="container container-new-item-view">
  <h1>Modifier votre article </h1>  
    <div class="row">
    <div class="col-sm-12"><%= current_user.first_name %></div>
      <div class="col-sm-9">
        <div class="tab-content">
        <!------>
        <div class="">
          <%= form_with(model: @item, local: true, class: "w-25") do |form|%>
            <div class="form-group">
              <% if @item.img_products.attached? %>
                <%= @item.img_products.each do |i|%>
                <%= image_tag(i, class: "img-circle",width: "400")%>
              <%end%>
          <%end%>

              <%= form.label :img_products %>
              <%= form.file_field :img_products, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.submit "Charger photo objet", class: "btn btn-primary" %>
            </div>
          <%end%>
        </div>
        <!------>
        <%= form_for @item do |f| %> 
            <div class="form-group">
              <div class="col-sm-6">
                <label for="title">Intutulé de votre objet :</label>
                <%= f.text_field :title, class: 'form-control',placeholder: "Mon objet est ..." %></li>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-6">
                <label for="last_name">Description :</label>
                <%= f.text_area  :description, class: 'form-control',placeholder: "Description" %></li>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-6">
                <label for="price">Prix :</label>
                <%= f.text_field  :price, class: 'form-control',placeholder: "Prix" %></li>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-6">
                <label for="mobile">Disponibilité (en nombre de jours) :</label>
                <%= f.number_field :available_duration , class: 'form-control',placeholder: "Pour combien de temps ?" %></li>
              </div>
            </div>
        
            <div class="form-group">
              <div class="col-sm-6">
                <label for="mobile">Votre catégorie</label>
                <%= f.select :category, options_for_select(["Sport", "Bricolage", "Electroménager", "Other"],:disabled => ["Select One"]), :class => 'genForm_dropBox' %>
              </div>
            </div>

              <div class="col-sm-12" style="padding-top: 10px;">
                      <%= f.submit "Editer l'annonce", class: "btn btn-lg btn-primary glyphicon glyphicon-ok-sign" %>
              <% end %>
              <%= link_to 'Profil de votre article', @item, class: "btn btn-link" %> |
              <%= link_to 'Retour en arrière', items_path, class: "btn btn-link" %>


              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>  
