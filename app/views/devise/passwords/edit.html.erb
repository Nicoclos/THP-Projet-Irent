<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "New password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caract√®res minimums)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "Entrez un nouveau mot de passe" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmer mot de passe" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirmez votre nouveau mot de passe" %>
  </div>

  <div class="actions">
    <%= f.submit "Changer mot de passe" class: "btn btn-warning" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
