
<div class="d-flex justify-content-center mt-12">
<div class="container modal-content rounded-5 shadow ">
  <div class="d-flex justify-content-center">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <h2>Modification mot de passe</h2>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field ">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true,class: 'form-control  mb-3"', autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %> <i>(laissez vide si vous ne voulez pas le changer)</i><br />
        <%= f.password_field :password,class: 'form-control mb-3', autocomplete: "new-password", placeholder: "Nouveau mot de passe"%>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> caractères minimums </em>
        <% end %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation,class: 'form-control  mb-3"', autocomplete: "new-password", placeholder: "Nouveau mot de passe" %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <i>(nous avons besoin de votre mot de passe actuel pour confirmer vos modifications)</i><br />
        <%= f.password_field :current_password, class: 'form-control  mb-3"', autocomplete: "current-password", placeholder: "Ancien mot de passe" %>
      </div>
    
      <br>
      <div class="actions">
        <%= f.submit "Mettre à jour", class: "w-100 mb-2 btn btn-lg rounded-4 btn-primary" %>
      </div>

    <%= link_to "Retour en arrière", :back %><br>
    <%= button_to "Supprimer mon compte ", registration_path(resource_name), data: { confirm: "Es-tu sur?" },class: "btn btn-danger pb-12", method: :delete %>

    <% end %>

   
  </div>
  </div>
</div>
