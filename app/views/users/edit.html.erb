<section class="user-profile">
  <div class="container">
    <div class="row">
      <div class="col-sm-12"><h1><%= current_user.first_name %></h1></div>
      <div class="row">
      <!--profile-picture-->
        <div class="">
         <%= form_with(model: @user, local: true, class: "w-25") do |form|%>
          <div class="form-group">
                <% if @user.profile_picture.attached? %>
                  <%= image_tag @user.profile_picture, style: "width: 200px; display: block"%>
                <%end%>

                <%= form.label :profile_picture %>
                <%= form.file_field :profile_picture, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.submit "Charger photo profil", class: "btn btn-primary" %>
          </div>
        <%end%>
        </div>
        <!-------------->
        <div class="col-sm-9">
          <div class="tab-content">
            <%= form_with model: @user do |f| %>
              <div class="form-group">
                <div class="col-sm-6">
                  <label for="first_name"><h4>Prénom</h4></label>
                  <%= f.text_field :first_name, class: 'form-control',placeholder: "Prénom" %></li>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-6">
                  <label for="last_name"><h4>Nom de famille</h4></label>
                  <%= f.text_field :last_name, class: 'form-control',placeholder: "Nom de famille" %></li>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-6">
                  <label for="email"><h4>Email</h4></label>
                  <%= f.text_field :email, class: 'form-control',placeholder: "Adresse email" %></li>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-6">
                  <label for="phone"><h4>Téléphone</h4></label>
                  <%= f.text_field :phone_number, class: 'form-control',placeholder: "Numéro de téléphone" %></li>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-6">
                  <label for="mobile"><h4>Présentation</h4></label>
                  <%= f.text_field :bio, class: 'form-control',placeholder: "Bio" %></li>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-6">
                  <label for="mobile"><h4>Votre ville</h4></label>
                  <%= f.text_field :city_name, class: 'form-control',placeholder: "Votre ville" %></li>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-6">
                  <label for="mobile"><h4>Adresse</h4></label>
                  <%= f.text_field :address, class: 'form-control',placeholder: "Rue & numéro de rue" %></li>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-6">
                  <label for="mobile"><h4>Code Postal</h4></label>
                  <%= f.text_field :zip_code, class: 'form-control',placeholder: "Code postal" %></li>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-12">
                  <br />
                          <%= f.submit "Sauvegarder modification ", class: "btn btn-lg btn-success glyphicon glyphicon-ok-sign" %>
                  <% end %>

                  <%= link_to 'edit password', edit_user_registration_path(current_user.id), class: "btn btn-lg btn-danger    " %> <br>
                  <br>
                      <%= link_to "Retour en arrière", :back %><br>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>  
</section>
