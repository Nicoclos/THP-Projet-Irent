<p id="notice"><%= notice %></p>

<h1 class="text-center">Bienvenue <%=@user.first_name%></h1>



<div class="span3 well">
        <center>
        <%if current_user.profile_picture.attached?%>
          <%= image_tag @user.profile_picture,class: "img-circle",width: "140", height: "140", alt: 'avatar' %>
        <%else%>
          <p>Pas encore d'avatar?</p>
        <%end%>
        <h3><%=@user.email%></h3>
        <em><%=@user.bio%></em>
		</center>
    </div>
<div class="card card-custom2 shadow p-3">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-3">
        <div class="avatar-big m-auto">

        </div>
      </div>
      <div class="col-9">
        <table class="table table-borderless max-width-18 m-auto m-4">
          <tbody>
            <tr>
              <th scope="row">Prénom:</th>
              <td><%=@user.first_name%></td>
            </tr>
            <tr>
              <th scope="col">Nom:</th>
              <td><%=@user.last_name%></td>
            </tr>
            <tr>
              <th scope="col">Adresse e-mail:</th>
              <td><%=@user.email%></td>
            </tr>
            <tr>
              <th scope="col">Téléphone</th>
              <td><%=@user.phone_number%></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<center>

<div class="mt-8">
	<div style="padding-left: 100px; margin-top: 15px; margin-bottom: 40px;">
<%= link_to 'Modifier informations personnelles', edit_user_path(current_user.id), class: 'btn btn-success' %>
<%= link_to 'Editer mot le mot de passe', edit_user_registration_path(current_user.id), class: 'btn btn-danger' %>
</div>

</div>
</center>



<div class="container">
  <% @items.each do |itm| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            by <%= itm.user.first_name if itm.user %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to itm.title, items_path(itm), class: "text-success" %></h5>
            <p class="card-text"><%= truncate(itm.description, length: 100) %></p>
            <%= link_to "View", item_path(itm.id), class: "btn btn-outline-success" %>
            <%= link_to "Delete", item_path(itm), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
          </div>
          <div class="card-footer text-muted">
            <small>Créé il y a <%= time_ago_in_words(itm.created_at) %>, 
            Modifié il y a <%= time_ago_in_words(itm.updated_at) %></small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>