<div class="container">
  <% @items.each do |itm| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            by <%= itm.user.first_name if itm.user %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to itm.title, items_path(itm), class: "text-success" %></h5>
            <p class="card-text"><%= truncate(itm.description, length: 100) %></p>
            <%= link_to "View", items_path(itm), class: "btn btn-outline-success" %>
            <%= link_to "Delete", items_path(itm), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(itm.created_at) %> ago, 
            edited <%= time_ago_in_words(itm.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>